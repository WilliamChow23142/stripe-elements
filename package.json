{
  "name": "@power-elements/stripe-elements",
  "version": "2.0.0",
  "description": "Web Component wrapper for stripe elements",
  "main": "stripe-elements.js",
  "module": "stripe-elements.js",
  "type": "module",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "prepare": "npm run build",
    "release": "standard-version",
    "build": "run-p build:*",
    "build:rollup": "rollup -c",
    "build:analyze:json": "wca analyze src/StripeElements.js --outFile custom-elements.json",
    "build:analyze:markdown": "wca analyze src/StripeElements.js --outFile README.md",
    "test": "karma start --coverage",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test:update-snapshots": "karma start --update-snapshots",
    "test:prune-snapshots": "karma start --prune-snapshots",
    "site:build": "npm run storybook:build",
    "storybook": "start-storybook --node-resolve --watch --open --babel",
    "storybook:build": "build-storybook",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bennypowers/stripe-elements.git"
  },
  "files": [
    "*.js",
    "_virtual/*",
    "src/*",
    "demo/*",
    "README.md",
    ".babelrc",
    "index.html",
    "test/*"
  ],
  "keywords": [
    "web-components",
    "lit-element",
    "lit-element-2.0",
    "stripe",
    "payment"
  ],
  "author": "Benny Powers <web@bennypowers.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bennypowers/stripe-elements/issues"
  },
  "homepage": "https://github.com/bennypowers/stripe-elements#readme",
  "devDependencies": {
    "@apollo-elements/eslint-config": "^1.1.0",
    "@babel/core": "^7.7.7",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/preset-env": "^7.7.7",
    "@material/mwc-button": "^0.12.0",
    "@material/mwc-textfield": "^0.12.0",
    "@open-wc/demoing-storybook": "^1.4.0",
    "@open-wc/testing": "^2.5.0",
    "@open-wc/testing-karma": "^3.2.28",
    "@power-elements/json-viewer": "^1.0.1",
    "babel-eslint": "^10.0.3",
    "chai-things": "^0.2.0",
    "crocks": "^0.12.4",
    "deepmerge": "^4.2.2",
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-no-loops": "^0.3.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.29.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "semantic-release": "^15.14.0",
    "semantic-release-cli": "^5.2.3",
    "sinon": "^8.0.4",
    "sinon-chai": "^3.4.0",
    "standard-version": "^7.0.1",
    "web-component-analyzer": "^1.0.1"
  },
  "dependencies": {
    "lit-element": "^2.2.1"
  }
}
